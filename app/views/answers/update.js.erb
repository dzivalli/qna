answer = $("div[data-id='<%= @answer.id %>']");
answer.find('.errors').html("");
<% if @answer.errors.any? %>
  <% @answer.errors.full_messages.each do |msg|  %>
    answer.find('.errors').prepend("<p><%= msg %></p>");
  <% end  %>
<% else  %>
  answer_html = $("<%= j render @answer %>");
  answer.html(answer_html.children());
<% end %>

